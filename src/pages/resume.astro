                <!-- Education -->
                <div class="mb-4">
                    <h1
                        class="text-xl font-bold uppercase text-purple-600 dark:text-purpleDark md:text-2xl"
                    >
                        Education
                    </h1>

                    <!-- education history item start -->
                    <div class="flex w-full justify-between border-b pb-2">
                        <div class="text-md mb-1 w-full md:text-lg">
                            <p>
                                <b>Coding Dojo</b> | <em
                                    >Full-Stack Developer Certificate</em
                                >
                            </p>
                            <ul
                                class="ml-6 list-outside list-disc marker:text-purple-600 dark:marker:text-purpleDark"
