---
import Layout from '../layouts/Layout.astro'
import { client } from '../lib/sanity'
import { resume as query } from '../ts/queries'

import { Linkedin, GitHub, ArrowIcon, Download, PDF } from '../components/icons'

const response = await client.fetch(query)
const resumeURL = response[0].resumeURL
---

<Layout title="resumé | Chris Nowicki">
    <main class="flex flex-col sm:mt-4 md:mt-10 md:px-10 lg:px-0">
        <div class="mx-auto flex w-full max-w-3xl flex-col sm:px-10 md:px-0">
            <div class="mb-4 text-center text-xl md:text-left">
                <h1 class="text-4xl">Chris Nowicki</h1>
                <a
                    href="mailto:chris@chrisnowicki.io"
                    class="ml-1 text-purple-600 hover:underline dark:text-purpleDark"
                >
                    chris@chrisnowicki.io</a
                > | 949.547.6356
            </div>

            <!-- links and resume download -->
            <div
                class="mb-12 flex w-full flex-col items-center gap-4 md:flex-row"
            >
                <!-- linkedin -->
                <a
                    href={`${resumeURL}?dl=`}
                    class="flex w-3/4 items-center justify-between rounded-md border border-neutral-200 p-4 hover:bg-neutral-100 dark:border-neutral-900/50 hover:dark:bg-neutral-900/20 md:w-full"
                >
                    <div class="flex items-center gap-2">
                        <PDF size={24} />
                        Download Resumé
                    </div>
                    <Download size={24} />
                </a>
                <!-- linkedin -->
                <a
                    href="http://www.linkedin.com/in/chris-nowicki"
                    class="flex w-3/4 items-center justify-between rounded-md border border-neutral-200 p-4 hover:bg-neutral-100 dark:border-neutral-900/50 hover:dark:bg-neutral-900/20 md:w-full"
                    target="_blank"
                >
                    <div class="flex items-center gap-2">
                        <Linkedin size={24} />
                        Linkedin
                    </div>
                    <ArrowIcon size={12} />
                </a>
                <!-- linkedin -->
                <a
                    href="https://github.com/chris-nowicki"
                    class="flex w-3/4 items-center justify-between rounded-md border border-neutral-200 p-4 hover:bg-neutral-100 dark:border-neutral-900/50 hover:dark:bg-neutral-900/20 md:w-full"
                    target="_blank"
                >
                    <div class="flex items-center gap-2">
                        <GitHub size={24} />
                        GitHub
                    </div>
                    <ArrowIcon size={12} />
                </a>
            </div>

            <div class="flex w-full flex-col gap-4">
                <!-- technical skills -->
                <div class="mb-4">
                    <h1
                        class="text-xl font-bold uppercase text-purple-600 dark:text-purpleDark md:text-2xl"
                    >
                        Technical Skills
                    </h1>
                    <p class="text-md md:text-lg">
                        <b>Languages:</b> JavaScript, TypeScript, Python, HTML, CSS
                        <b class="text-purple-600 dark:text-purpleDark">|</b>
                        <b>Frameworks/Libraries:</b> React, Next.js, Astro, Express,
                        Node.js, Vite, Bootstrap, Tailwindcss, Material UI, Sass,
                        React Markdown, remark <b
                            class="text-purple-600 dark:text-purpleDark">|</b
                        >
                        <b>Databases:</b> MongoDB, MySQL, Prisma ORM <b
                            class="text-purple-600 dark:text-purpleDark">|</b
                        >
                        <b>Tools:</b> Sanity CMS, AWS (EC2/S3), Vercel, VS Code,
                        Git, Github, JSON, Postman, MySQL Workbench, REST API, JIRA,
                        Mac OS X, Linux, iTerm2, starship cross-shell prompt
                    </p>
                </div>

                <!-- technical projects -->
                <div class="text-md mb-4 md:text-lg">
                    <h1
                        class="text-xl font-bold uppercase text-purple-600 dark:text-purpleDark md:text-2xl"
