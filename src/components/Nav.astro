---
interface Links {
    name: string
    html: string
    show: boolean
}

const links: Links[] = [
    { name: 'home', html: '#home', show: true },
    { name: 'projects', html: '#projects', show: false },
    { name: 'contact', html: '#contact', show: true },
]
---

<div id="home" class="flex flex-col">
    <nav
        class="relative mx-auto flex w-full max-w-3xl flex-row justify-between pt-4 pb-4 sm:items-center sm:px-10 sm:shadow md:items-center md:px-0 md:shadow-none"
    >
        <div class="items-center md:flex">
            {
                links.map(
                    (link, index) =>
                        link.show && (
                            <a
                                href={link.html}
                                class={`text-xl hover:scale-105 hover:text-purple-600 dark:text-textDark dark:hover:text-purpleDark
                            ${
                                index % 2 == 0
                                    ? 'hover:-rotate-12'
                                    : 'hover:rotate-12'
                            } 
                            mr-4 transition-transform duration-300 ease-in-out`}
                            >
                                {link.name}
                            </a>
                        )
                )
            }
        </div>

        <!-- sun:moon icon button for dark:light theme -->
        <div class="flex flex-row items-center justify-center">
            <button
                class="flex items-center rounded border-2 border-gray-300 p-1 shadow-md hover:border-purple-600 hover:text-purple-600 hover:shadow-purple-600/25 dark:border-textDark/25 dark:text-textDark dark:hover:border-purpleDark dark:hover:text-purpleDark"
                onclick="themeSwitch()"
            >
                <svg
                    id="moon"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6 font-bold"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
                    ></path>
                </svg>
                <svg
                    id="sun"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6 hover:font-bold"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                    ></path>
                </svg>
            </button>
        </div>
        <!-- resume link -->
        <!-- <div class="flex flex-row">
                <a
                    href="#"
                    class={`text-xl dark:text-textDark text-purple-600 border-2 border-purple-600 dark:border-purpleDark hover:dark:bg-purpleDark hover:bg-purple-700
            ${links.length % 2 === 0 ? 'hover:-rotate-12' : 'hover:rotate-12 '} 
            hover:shadow-md hover:shadow-0 hover:rounded transition-all delay-75 hover:text-white durration-700 ease-in-out px-4 py-1 ml-4`}
                    >resume</a
                >
            </div> -->
    </nav>
</div>

<script is:global>
    // icons
    const sun = document.getElementById('sun').classList
    const moon = document.getElementById('moon').classList

    // theme variables
    const currentTheme = document.documentElement.classList

    // iconToggle
    const iconToggle = () => {
        moon.toggle('hidden')
        sun.toggle('hidden')
    }

    const themeSwitch = () => {
        if (currentTheme.contains('dark')) {
            currentTheme.remove('dark')
            localStorage.theme = 'light'
            iconToggle()
            return
        }

        currentTheme.add('dark')
        localStorage.theme = 'dark'
        iconToggle()
    }
</script>
