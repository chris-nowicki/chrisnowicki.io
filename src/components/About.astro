import picture from '../images/me.png'
---

<!-- about me section -->
<div class="flex flex-col w-full items-center md:items-start text-xl md:mr-6">
    <p class="mt-6 md:mt-0 md:text-3xl mb-3">
        Hello, I'm <span class="text-purple-600 dark:text-purpleDark"
            >Chris Nowicki</span
        >.
    </p>
    <p class="px-10 text-center md:text-left md:px-0">
        I'm a technology nerd who lives on coffee ‚òïÔ∏è, obsessed with
