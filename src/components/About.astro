---
import { urlFor } from '../util/imageBuilder'

export interface Props {
    profilePicture: string
}

const { profilePicture } = Astro.props
---

<!-- about me section -->
<div class="flex w-full flex-col items-center text-xl md:mr-6 md:items-start">
    <p class="mb-3 md:mt-0 md:text-3xl">
        Hello, I'm <span class="text-purple-600 dark:text-purpleDark"
            >Chris Nowicki</span
        >.
    </p>
    <p class="px-10 text-center md:px-0 md:text-left">
        I'm a technology nerd who lives on coffee ‚òïÔ∏è, obsessed with
        cheeseburgers üçî, and tinkers with new tech on a daily basis.
    </p>
    <p class="mt-4 px-10 text-center md:mr-4 md:px-0 md:text-left">
        I excel at bringing web designs to life and am passionate about backend
        development.
    </p>
    <p class="mt-4 px-10 text-center md:mr-4 md:px-0 md:text-left">
        I'm currently looking for a new role as a full-stack engineer. <span
            class="text-purple-600 dark:text-purpleDark">Hire me!</span
        >
    </p>
    <div class="flex flex-row">
        <a
            href="http://www.linkedin.com/in/chris-nowicki"
            class="mt-8 mr-4 flex items-center rounded border border-blue-600 px-4 py-2 text-2xl text-blue-600 hover:bg-blue-600 hover:text-white dark:border-textDark dark:text-textDark dark:hover:bg-textDark dark:hover:text-bgDark"
            target="_blank"
            ><ion-icon name="logo-linkedin" class="mr-2"></ion-icon>Linkedin</a
        >
        <a
            href="https://github.com/chris-nowicki"
            class="mt-8 flex items-center rounded border border-black px-4 py-2 text-2xl hover:bg-black hover:text-white dark:border-purpleDark dark:text-purpleDark dark:hover:bg-purpleDark dark:hover:text-textDark"
            target="_blank"
            ><ion-icon name="logo-github" class="mr-2"></ion-icon>Github</a
        >
    </div>
</div>

<!-- about me image -->
<div
    class="mt-8 flex w-[250px] flex-col justify-center md:mt-0 md:ml-6 md:w-[400px] md:items-start md:justify-end"
>
    <img
        src={urlFor(profilePicture).width(250).url()}
        height="auto"
        class="mb-5 mr-auto rounded shadow-lg shadow-black/50 grayscale transition-all duration-500 ease-in-out hover:grayscale-0 dark:shadow dark:shadow-purpleDark"
        alt="chris nowicki's profile picture"
    />
</div>
