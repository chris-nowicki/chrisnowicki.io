<!-- about me image -->
<div
    class="mt-8 md:mt-0 flex justify-center md:justify-end md:items-start md:ml-6 md:w-[400px] w-[250px]"
>
    <img
        src={picture}
        height="auto"
        class="rounded shadow-lg shadow-black/50 mr-auto dark:shadow-purpleDark dark:shadow grayscale hover:grayscale-0 ease-in-out transition-all duration-500"
    />
</div>
