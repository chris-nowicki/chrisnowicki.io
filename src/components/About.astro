---
// icons
import { Linkedin, GitHub, ArrowIcon } from './icons'

// sanity.io client & query
import { client, picture as query } from '../lib/sanity'
import { urlFor } from '../util/imageBuilder'

// fetch featured projects from sanity.io
const response = await client.fetch(query)
const image: string = response[0].chrisnowicki

const chrisnowicki = urlFor(image).url()
---

<!-- about me section -->
<div
    class="box flex w-full flex-col items-center text-center text-xl md:mr-6 md:items-start md:text-left"
>
    <p class="mb-3 md:mt-0 md:text-3xl">
        Hello, I'm <span class="text-purple-600 dark:text-purpleDark"
            >Chris Nowicki</span
        >.
    </p>
    <p>
        I'm a technology nerd who lives on coffee ‚òïÔ∏è, is obsessed with
        cheeseburgers üçî, and tinkers with new tech on a daily basis.
    </p>
    <p class="mt-4 md:mr-4">
        I excel at bringing web designs to life and am passionate about backend
        development.
    </p>
    <p
        class="mt-4 font-mono text-lg font-bold text-purple-600 dark:text-purpleDark md:mr-4"
    >
        I'm currently looking for a new role as a full-stack engineer.
    </p>
    <div class="flex w-full flex-row justify-center md:justify-start">
        <a
            href="http://www.linkedin.com/in/chris-nowicki"
            class="mt-8 mr-4 flex items-center gap-2 rounded border border-neutral-200 px-4 py-2 text-lg hover:bg-neutral-100 dark:border-gray-900 dark:hover:bg-gray-900/25"
            target="_blank"
        >
            <Linkedin size={24} />Linkedin <ArrowIcon size={12} /></a
        >

        <a
            href="https://github.com/chris-nowicki"
            class="mt-8 flex items-center gap-2 rounded border border-neutral-200 px-4 py-2 text-lg hover:bg-neutral-100 dark:border-gray-900 dark:hover:bg-gray-900/25"
            target="_blank"
            ><GitHub size={24} />GitHub <ArrowIcon size={12} /></a
        >
    </div>
</div>

<!-- about me image -->
<div
    class="flex w-[200px] flex-col items-center sm:mb-4 md:mb-0 md:mt-0 md:w-[400px]"
>
    <img
        class="w-full rounded shadow-lg md:w-auto"
        width="400px"
        height="400px"
        src={chrisnowicki}
        alt="chris nowicki"
    />
</div>
