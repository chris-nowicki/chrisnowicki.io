generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model githubMetrics {
  id         Int       @id @default(autoincrement())
  commits    Int?
  repos      Int?
  updated_at DateTime? @default(now()) @db.DateTime(0)
}

model postViews {
  id         Int       @id @default(autoincrement())
  count      Int       @default(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
}

model tweetCount {
  id         Int       @id @default(autoincrement())
  count      Int?
  updated_at DateTime? @default(now()) @db.DateTime(0)
}
