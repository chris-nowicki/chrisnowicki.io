{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "pnpm install",
        "buildCommand": "pnpm run build"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron/tweet-count-sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/github-metrics-sync",
      "schedule": "*/10 * * * *"
    }
  ]
}
